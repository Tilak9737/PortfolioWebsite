@model string
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="intro-section">
    <div class="intro-container">
        <h1>Contact Me</h1>
        <p class="tagline">Connect with me across my social platforms.</p>
    </div>
</section>

<section class="contact-section">
    <div class="contact-container">
        <h2>Get in Touch</h2>
        <div class="social-grid">
            <a href="https://github.com/yourusername" target="_blank" class="social-card" style="animation-delay: 0.2s;">
                <i class="fa-brands fa-github"></i>
                <div class="social-details">
                    <h3>GitHub</h3>
                    <p>yourusername</p>
                </div>
            </a>
            <a href="https://linkedin.com/in/yourusername" target="_blank" class="social-card" style="animation-delay: 0.3s;">
                <i class="fa-brands fa-linkedin"></i>
                <div class="social-details">
                    <h3>LinkedIn</h3>
                    <p>yourusername</p>
                </div>
            </a>
            <a href="https://twitter.com/yourusername" target="_blank" class="social-card" style="animation-delay: 0.4s;">
                <i class="fa-brands fa-twitter"></i>
                <div class="social-details">
                    <h3>Twitter</h3>
                    <p>yourusername</p>
                </div>
            </a>
            <a href="mailto:your.email@example.com" class="social-card" style="animation-delay: 0.5s;">
                <i class="fa-solid fa-envelope"></i>
                <div class="social-details">
                    <h3>Email</h3>
                    <p>your.email@example.com</p>
                </div>
            </a>
        </div>
    </div>
</section>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    .intro-section {
        background: #080808;
        padding: 25px 10px;
        text-align: center;
    }

    .intro-container {
        max-width: 800px;
        margin: 0 auto;
        opacity: 0;
        animation: fadeIn 0.7s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

        .intro-container h1 {
            font-size: 2.3rem;
            font-weight: 600;
            color: #eceff1;
            letter-spacing: 2px;
            text-shadow: 0 0 3px rgba(77, 182, 172, 0.15);
            margin-bottom: 10px;
        }

    .tagline {
        font-size: 1.1rem;
        font-weight: 300;
        color: #80d8ff;
        letter-spacing: 1px;
        margin-bottom: 12px;
    }

    .contact-section {
        background: #0d0d0d;
        padding: 25px 10px;
    }

    .contact-container {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

        .contact-container h2 {
            font-size: 1.6rem;
            font-weight: 400;
            color: #eceff1;
            letter-spacing: 1px;
            margin-bottom: 20px;
        }

    .social-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
        padding: 0 10px;
        max-width: 600px;
        margin: 0 auto;
    }

    .social-card {
        background: #1a1a1a;
        border-radius: 8px;
        padding: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        border: 1px solid #b0bec5;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1), border-color 0.3s ease;
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
        opacity: 0;
        animation: fadeIn 0.7s cubic-bezier(0.4, 0, 0.2, 1) forwards;
        width: 120px;
        height: 120px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        text-decoration: none;
    }

        .social-card:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 10px rgba(128, 216, 255, 0.1);
            border-color: #80d8ff;
        }

        .social-card i {
            font-size: 32px;
            color: #80d8ff;
            transition: opacity 0.3s ease;
        }

        .social-card:hover i {
            opacity: 0.3;
        }

    .social-details {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(26, 26, 26, 0.85);
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transform: translateY(8px);
        transition: opacity 0.3s ease, transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .social-card:hover .social-details {
        opacity: 1;
        transform: translateY(0);
    }

    .social-details h3 {
        font-size: 0.95rem;
        font-weight: 500;
        color: #eceff1;
        margin-bottom: 4px;
        letter-spacing: 0.8px;
    }

    .social-details p {
        font-size: 0.8rem;
        font-weight: 300;
        color: #b0bec5;
        letter-spacing: 0.5px;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 768px) {
        .intro-container h1

    {
        font-size: 1.8rem;
    }

    .tagline {
        font-size: 0.95rem;
    }

    .contact-container h2 {
        font-size: 1.4rem;
    }

    .social-grid {
        grid-template-columns: 1fr;
        gap: 10px;
        max-width: 200px;
    }

    .social-card {
        width: 100px;
        height: 100px;
        padding: 10px;
    }

        .social-card i {
            font-size: 28px;
        }

    .social-details h3 {
        font-size: 0.9rem;
    }

    .social-details p {
        font-size: 0.75rem;
    }

    }
</style>