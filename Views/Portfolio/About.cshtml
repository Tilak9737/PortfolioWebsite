@model string
@{
    ViewData["Title"] = "About Me";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="intro-section">
    <div class="intro-container">
        <h1>About Me</h1>
        <p class="tagline">Crafting innovative solutions through code and curiosity.</p>
        <p class="bio">
            I'm a final-year B.Tech student in Computer Science, passionate about building impactful software. From AI-driven platforms to full-stack web applications, I thrive on turning ideas into reality.
        </p>
    </div>
</section>

<section class="journey-section">
    <div class="journey-container">
        <h2>My Journey</h2>
        <div class="journey-grid">
            <div class="journey-card">
                <h3>Education</h3>
                <p>
                    Pursuing a B.Tech in Computer Science and Engineering at Drs. Kiran and Pallavi Patel Global University, Vadodara, with a CGPA of 8.51. My foundation in Algorithms, Data Structures, and Databases fuels my problem-solving skills.
                </p>
            </div>
            <div class="journey-card">
                <h3>Experience</h3>
                <p>
                    As a Web Developer intern at Webmyne Systems Pvt. Ltd., I contribute to *StudentERP*, a .NET Core MVC application with MySQL, honing my skills in backend development and teamwork.
                </p>
            </div>
            <div class="journey-card">
                <h3>Passion</h3>
                <p>
                    I created *Inter-Prep-AI*, an AI-driven interview preparation platform using React.js, PostgreSQL, and Gemini AI API. This project reflects my love for full-stack development and intelligent solutions.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="cta-section">
    <div class="cta-container">
        <div class="cta-card">
            <p>
                Ready to explore my work? Check out my <a href="/Portfolio/Projects">projects</a> or <a href="/Portfolio/Contact">reach out</a> to collaborate on something exciting!
            </p>
        </div>
    </div>
</section>

<style>
    .intro-section {
        background: #080808;
        padding: 40px 20px;
        text-align: center;
    }

    .intro-container {
        max-width: 800px;
        margin: 0 auto;
        opacity: 0;
        animation: fadeIn 1s ease-out forwards;
    }

        .intro-container h1 {
            font-size: 2.8rem;
            font-weight: 600;
            color: #eceff1;
            letter-spacing: 1.5px;
            text-shadow: 0 0 6px rgba(77, 182, 172, 0.3);
            margin-bottom: 15px;
        }

    .tagline {
        font-size: 1.3rem;
        font-weight: 300;
        color: #80d8ff;
        margin-bottom: 20px;
    }

    .bio {
        font-size: 1.1rem;
        font-weight: 300;
        color: #b0bec5;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }

    .journey-section {
        background: #0d0d0d;
        padding: 40px 20px;
    }

    .journey-container {
        max-width: 1000px;
        margin: 0 auto;
        text-align: center;
    }

        .journey-container h2 {
            font-size: 2rem;
            font-weight: 400;
            color: #eceff1;
            margin-bottom: 30px;
        }

    .journey-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .journey-card {
        background: #1a1a1a;
        border-radius: 8px;
        padding: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        border: 1px solid #b0bec5;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1), border-color 0.3s ease, background 0.3s ease;
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
    }

        .journey-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(128, 216, 255, 0.1);
            border-color: #80d8ff;
            background: rgba(128, 216, 255, 0.03);
        }

        .journey-card h3 {
            font-size: 1.2rem;
            font-weight: 500;
            color: #eceff1;
            margin-bottom: 8px;
            letter-spacing: 0.8px;
        }

        .journey-card p {
            font-size: 0.85rem;
            font-weight: 300;
            color: #b0bec5;
            line-height: 1.5;
            letter-spacing: 0.5px;
        }

    .cta-section {
        background: #080808;
        padding: 40px 20px;
        text-align: center;
    }

    .cta-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-card {
        background: #1a1a1a;
        border-radius: 8px;
        padding: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        border: 1px solid #b0bec5;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1), border-color 0.3s ease, background 0.3s ease;
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
        max-width: 600px;
        margin: 0 auto;
    }

        .cta-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(128, 216, 255, 0.1);
            border-color: #80d8ff;
            background: rgba(128, 216, 255, 0.03);
        }

        .cta-card p {
            font-size: 0.95rem;
            font-weight: 300;
            color: #b0bec5;
            line-height: 1.5;
            letter-spacing: 0.5px;
        }

        .cta-card a {
            color: #80d8ff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .cta-card a:hover {
                color: #4db6ac;
            }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 768px) {
        .intro-container h1

    {
        font-size: 2.2rem;
    }

    .tagline {
        font-size: 1.1rem;
    }

    .bio {
        font-size: 1rem;
    }

    .journey-container h2 {
        font-size: 1.6rem;
    }

    .journey-card {
        padding: 10px;
    }

        .journey-card h3 {
            font-size: 1.1rem;
        }

        .journey-card p {
            font-size: 0.8rem;
        }

    .cta-card {
        padding: 10px;
    }

        .cta-card p {
            font-size: 0.9rem;
        }

    }
</style>